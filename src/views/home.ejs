<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home</title>
    <%- include ('./partials/head') %>
  </head>
  <body>
    <%- include ('./partials/nav') %>
    <div class="container mt-3">
      <div class = "row row-cols-4">
      <% blogs.forEach(blog => { %>
        <div class="col">
        <div class="card" style="width: 18rem;">
        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="..." style="width: 280px; height: 200px;">
        <div class="card-body">
        <h5 class="card-title"><%= blog.title %></h5>
        <a href="/blog/<%= blog._id %>" class="btn btn-primary"> Details</a>
        </div>
      </div>
      </div>
       <% }) %>
    </div>
  </div>
    <%- include ('./partials/scripts') %>
  </body>
</html>
