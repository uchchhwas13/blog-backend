<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home</title>
    <%- include ('./partials/head') %>
  </head>
  <body>
    <%- include ('./partials/nav') %>
    <div class="container mt-4">
      <h1> <%= blog.title %></h1>
      <img src="<%= blog.coverImageUrl %>" width="700px" height="400px" />
      <p> <%= blog.body %></p>
    </div>
    <div class="container mt-5">
      <h3>Author</h3>
      <img src="<%= blog.createdBy.profileImageUrl %>" width="50px" height="50px" />
      <span><%= blog.createdBy.name %></span>
    </div>

    <div class="container mt-5">
      <h1>Comments</h1>
      <% if(locals.user) {%>
      <form action="/blog/comment/<%= blog._id %>" method="POST">

        <div class="mb-3">
          <input
            type="text"
            id="content"
            name="content"
            placeholder="Enter your comment here"
            class="form-control w-50"
          />
        </div>
        <button class="btn btn-primary">Submit</button>
      </form>
      <% } %>
      <div class="mt-3 mb-5">
        <%  comments.forEach(comment => {%>
          <div>
            <img src="<%= comment.createdBy.profileImageUrl %>" width="50px" height="50px" />
            <span><%= comment.createdBy.name %></span>
            <pre> <%= comment.content%></pre>
          </div>
         <%}) %>
      </div>
    </div>
    <%- include ('./partials/scripts') %>
  </body>
</html>
